ZSH_HIGHLIGHT_STYLES[precommand]='fg=#F5FF7D'
ZSH_HIGHLIGHT_STYLES[builtin]='fg=#FFD37F'

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
