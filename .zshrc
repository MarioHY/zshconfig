export EDITOR=nvim

function proxy_on() {
    export http_proxy=http://localhost:7897
    export https_proxy=$http_proxy
    git config --global http.proxy http://localhost:7897
    git config --global https.proxy http://localhost:7897
    echo -e "proxy has been enabled."
    echo git_config.http.proxy=$(git config --global --get http.proxy)
    echo git_config.https.proxy=$(git config --global --get https.proxy)
    echo http_proxy=$http_proxy
    echo http_proxy=$https_proxy
}

function proxy_get(){
    echo git_config.http.proxy=$(git config --global --get http.proxy)
    echo git_config.https.proxy=$(git config --global --get https.proxy)
    echo http_proxy=$http_proxy
    echo http_proxy=$https_proxy
}

function proxy_off(){
    git config --global --unset http.proxy
    git config --global --unset https.proxy
    unset http_proxy https_proxy
    echo -e "proxy has been disabled."
    echo git_config.http.proxy=$(git config --global --get http.proxy)
    echo git_config.https.proxy=$(git config --global --get https.proxy)
    echo http_proxy=$http_proxy
    echo http_proxy=$https_proxy
}

